# Git Configurations
# ==================
#
# References
# ----------
# - https://git-scm.com/book/en/v2/Customizing-Git-Git-Configuration
# - https://git-scm.com/docs/git-config
# - https://github.com/twpayne/dotfiles/blob/master/home/dot_config/git/config.tmpl

[user]
    name = {{ .name }}
    email = {{ .git.email }}

[branch]
	sort = -committerdate

[column]
	ui = auto

[core]
	editor = code --wait
	whitespace = trailing-space,space-before-tab,missing-newline-at-eof,trailing-empty-lines

[diff]
    algorithm = histogram
	colorMoved = plain
    renamelimit = 8192
	renames = true

[fetch]
	all = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[init]
	defaultBranch = main

[merge]
	conflictStyle = zdiff3

[pager]
	branch = false
	grep = false

[pull]
	rebase = true

[push]
	autoSetupRemote = true
    default = current

[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true

[receive]
	fsckobjects = true

[status]
	submoduleSummary = true

[tag]
	sort = version:refname

[transfer]
	fsckobjects = true

{{- $ghPath := lookPath "gh" }}
{{- if $ghPath }}
# Use `gh` as credential helper:
# - https://github.com/cli/cli/issues/3796#issuecomment-1064685471
# - https://github.com/twpayne/dotfiles/blob/448f34defa386443c39a6a5337a2e8fabfdd404a/home/dot_config/git/config.tmpl#L119-L125
[credential "https://github.com"]
    helper =
	helper = !{{ $ghPath }} auth git-credential
[credential "https://gist.github.com"]
	helper =
    helper = !{{ $ghPath }} auth git-credential
{{- end }}
